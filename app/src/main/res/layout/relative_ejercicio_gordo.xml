<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">


    <ImageView
        android:id="@+id/img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_1"
        android:gravity="center"
        android:text="TEXTO_1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_1"
        android:layout_toEndOf="@+id/img_1"
        android:gravity="center"
        android:text="TEXTO_2" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_1"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/img_1"
        android:text="BOTÓN_1" />

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_1"
        android:layout_alignParentRight="true"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_1"
        android:layout_toLeftOf="@+id/img_2"
        android:gravity="center"
        android:text="TEXTO_3"
        android:textStyle="bold" />"

    <TextView
        android:id="@+id/txt_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_2"
        android:layout_toLeftOf="@+id/img_2"
        android:gravity="center"
        android:text="TEXTO_4"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOTÓN_2"
        android:layout_below="@+id/txt_4"/>


    <ImageView
        android:id="@+id/img_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_2"
        android:layout_centerHorizontal="true"
        tools:src="@tools:sample/avatars" />

</RelativeLayout>