<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <EditText
        android:id="@+id/edit_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="Introduce texto"
        android:textSize="20sp">
    </EditText>

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/edit_1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/edit_1"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/img_1"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_3"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/img_2"
        android:layout_toEndOf="@id/img_1"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="InspiraciÃ³n de belleza en tonos pastel"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_1"
        android:layout_marginLeft="20dp"
        android:text="101 piezas 1 mes"
        android:textSize="15sp">
    </TextView>

    <ImageView
        android:id="@+id/img_4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/txt_2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_5"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/txt_2"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/img_1"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/img_6"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/img_5"
        android:layout_toEndOf="@id/img_4"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="Moda de primavera"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/txt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_3"
        android:layout_marginLeft="20dp"
        android:text="82 pines - 10 subtableros 5 meses"
        android:textSize="15sp">
    </TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_4"
        android:layout_marginTop="10dp"
        android:text="Comprar">
    </Button>

</RelativeLayout>